@model List<Cinema.Domain.DomainModels.Movie>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="m-3">
        <a asp-controller="Movies" asp-action="Create" class="btn btn-success"> Add new Product</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
            }
            <div class="col-md-3 m-4">
                <div class="card" style="width:18rem; height:30rem">
                    <img class="card-img" src="@item.MovieImage" style="height:50%" alt="Image for Product" />
                    <div class="card-body">
                        <h3 class="card-title">@item.MovieName</h3>
                        <p class="card-text">@item.MovieDescription</p>
                        <h6>Price:@item.MoviePrice $</h6>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Movies" asp-action="AddMovieToCard" asp-route-id="@item.Id" class="btn btn-info">Add To Card</a>
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>