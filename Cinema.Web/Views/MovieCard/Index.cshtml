@model Cinema.Domain.DTO.MovieCardDto

<div class="container">

    <div class="row m-5">
        <a asp-action="OrderNow" class="btn btn-success">Order now</a>
    </div>



    <div class=" row m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">MovieName:</th>
                    <th scope="col">MoviePrice:</th>
                    <th scope="col">Quantity:</th>
                    <th scope="col">Sum :</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.MovieInMovieCards.Count; i++)
                {
                    var item = Model.MovieInMovieCards[i];


                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.Movie.MovieName</td>
                        <td>@item.Movie.MoviePrice $</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Movie.MoviePrice*item.Quantity) $</td>
                        <td> <a asp-action="DeleteMovieFromMovieCard" asp-route-productId="@item.Movie.Id" class="btn btn-danger">Delete</a> </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th scope="col">TotalPrice:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice $</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>